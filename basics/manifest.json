{
    "manifest_version": 2,
    "name": "Odyssey Music Extension",
    "version": "0.1",
    "omnibox":{"keyword": "xd"},
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "gnu.png",
        "default_popup": "index.html",
        "default_title": "Odyssey Radio"
    },
    "content_security_policy": "script-src 'self' https://www.youtube.com https://cdn.rawgit.com https://ajax.googleapis.com https://gdata.youtube.com; object-src 'self'",
    "permissions":[
        "storage", "identity", "identity.email"
    ]
}